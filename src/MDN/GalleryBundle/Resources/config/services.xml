<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="mdn_gallery.page.handler.class">MDN\GalleryBundle\Handler\PageHandler</parameter>
        <parameter key="mdn_gallery.page.class">MDN\GalleryBundle\Entity\Page</parameter>
    </parameters>

    <services>
        <service id="mdn_gallery.page.handler" class="%mdn_gallery.page.handler.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%mdn_gallery.page.class%</argument>
            <argument type="service" id="form.factory"></argument>
        </service>
    </services>

</container>